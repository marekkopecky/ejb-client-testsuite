<configuration>
    <jboss-ejb-client xmlns="urn:jboss:wildfly-client-ejb:3.0">
        <connections>
            <connection uri="remote+http://${node1.address}:${node1.application-port}"/>
        </connections>
    </jboss-ejb-client>
    <endpoint xmlns="urn:jboss-remoting:5.0">
        <connections>
            <connection destination="remote+http://${node1.address}:${node1.application-port}"
                        read-timeout="1500"
                        heartbeat-interval="5000"/>
        </connections>
    </endpoint>

</configuration>